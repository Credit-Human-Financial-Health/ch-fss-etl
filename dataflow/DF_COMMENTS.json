{
	"name": "DF_COMMENTS",
	"properties": {
		"folder": {
			"name": "DATA TRANSFORMATION FLOWS"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "trans_comments_csv",
						"type": "DatasetReference"
					},
					"name": "source1"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "comments_csv",
						"type": "DatasetReference"
					},
					"name": "sink1",
					"rejectedDataLinkedService": {
						"referenceName": "AzureBlobStorage1",
						"type": "LinkedServiceReference"
					}
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          TranId as string,",
				"          CommentID as string,",
				"          PARENTID as integer,",
				"          SEQUENCENUMBER as string,",
				"          EFFECTIVEDATE as string,",
				"          POSTDATE as date,",
				"          POSTTIME as string,",
				"          Comment as string,",
				"          PWC_Key as integer",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> source1",
				"source1 derive(comment_id = concat(TranId, CommentID)) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['comments_csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1),",
				"     format: 'table') ~> sink1"
			]
		}
	}
}