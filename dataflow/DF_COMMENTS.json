{
	"name": "DF_COMMENTS",
	"properties": {
		"folder": {
			"name": "DATA TRANSFORMATION"
		},
		"type": "MappingDataFlow",
		"typeProperties": {
			"sources": [
				{
					"dataset": {
						"referenceName": "trans_comments_csv",
						"type": "DatasetReference"
					},
					"name": "sourcecomments"
				}
			],
			"sinks": [
				{
					"dataset": {
						"referenceName": "comments_csv",
						"type": "DatasetReference"
					},
					"name": "sinkfile"
				}
			],
			"transformations": [
				{
					"name": "derivedColumn1"
				}
			],
			"scriptLines": [
				"source(output(",
				"          TranId as string,",
				"          CommentID as string,",
				"          PARENTID as string,",
				"          SEQUENCENUMBER as string,",
				"          EFFECTIVEDATE as string,",
				"          POSTDATE as string,",
				"          POSTTIME as string,",
				"          Comment as string,",
				"          PWC_Key as string",
				"     ),",
				"     allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     ignoreNoFilesFound: false) ~> sourcecomments",
				"sourcecomments derive(comment_id = concat(TranId, CommentID),",
				"          transction_date = toTimestamp(\r",
				"    toString(POSTDATE) + ' ' + \r",
				"    substring(lpad(toString(POSTTIME), 4, '0'), 0, 2) + ':' + \r",
				"    substring(lpad(toString(POSTTIME), 4, '0'), 3, 4),\r",
				"    'yyyy-MM-dd HH:mm'\r",
				")) ~> derivedColumn1",
				"derivedColumn1 sink(allowSchemaDrift: true,",
				"     validateSchema: false,",
				"     partitionFileNames:['comments_csv'],",
				"     skipDuplicateMapInputs: true,",
				"     skipDuplicateMapOutputs: true,",
				"     partitionBy('hash', 1)) ~> sinkfile"
			]
		}
	}
}