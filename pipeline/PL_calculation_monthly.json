					"isSequential": true,
					"activities": [
						{
							"name": "share_financial_stat_table",
							"type": "ExecutePipeline",
							"dependsOn": [],
							"policy": {
								"secureInput": false
							},
							"userProperties": [],
							"typeProperties": {
								"pipeline": {
									"referenceName": "share_financial_stat_table",
